<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_viewPager"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="@dimen/list_item_divider_height"
    android:layout_marginLeft="@dimen/list_item_margin_horizontal"
    android:layout_marginRight="@dimen/list_item_margin_horizontal"
    android:elevation="2dp"
    android:overScrollMode="never" >

    <LinearLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/feeds_headerview_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/list_header_padding"
        android:paddingLeft="@dimen/list_header_padding"
        android:paddingRight="@dimen/list_header_padding" >

        <TextView
            android:id="@+id/item_type"
            style="@style/Feeds.Item.Title.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_item_divider_height"
            android:background="#FF000000"
            android:padding="8dp"
            android:textColor="#FFFFFFFF" />

        <TextView
            android:id="@+id/item_title"
            style="@style/Feeds.Item.Title.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/action_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/list_header_padding"
        android:paddingLeft="@dimen/list_header_padding"
        android:paddingRight="@dimen/list_header_padding"
        android:background="@drawable/feeds_itemview_bg" >

        <Button
            android:id="@+id/register_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="@string/action_register"
            style="@style/Feeds.Item.Title.TextView"
            android:textSize="@dimen/list_item_action_text_size" />
        
    </FrameLayout>

</android.support.v4.view.ViewPager>