<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/list_header_padding"
    android:background="@drawable/register_edit_text_bg_normal" >

    <TextView
        android:id="@+id/dialog_message_view"
        style="@style/Feeds.Item.Title.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_view_padding"
        android:textSize="@dimen/dialog_text_size" />

    <ImageView
        android:id="@+id/dialog_mascot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/avatar_hat"
        android:padding="@dimen/dialog_view_padding"/>

    <TextView
        android:id="@+id/dialog_action_view"
        style="@style/Feeds.Item.Title.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_view_padding"
        android:textSize="@dimen/dialog_text_size"
        android:background="@drawable/register_button_bg" />

    <TextView
        android:id="@+id/dialog_cancel_view"
        style="@style/Feeds.Item.Title.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_view_padding"
        android:textSize="@dimen/dialog_text_size"
        android:textColor="@color/feeds_item_description_color"
        android:text="@string/isee" />

</LinearLayout>