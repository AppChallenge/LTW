<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="Login.Style.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/login_text_color</item>
        <item name="android:textSize">@dimen/login_edit_text_size</item>
        <item name="android:background">@drawable/register_edit_text_bg_normal</item>
    </style>

    <style name="Widget.MyApp.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/color_primary</item>
        <item name="theme">@style/ThemeOverlay.MyApp.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/color_text_primary</item>
    </style>

    <style name="Widget.MyApp.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tabview_bg</item>
    </style>

    <style name="Feeds.Item.Title.TextView" parent="android:TextAppearance">
        <item name="android:textColor">@color/feeds_item_title_color</item>
        <item name="android:textSize">@dimen/list_item_title_text_size</item>
    </style>

    <style name="Feeds.Item.Description.TextView" parent="android:TextAppearance">
        <item name="android:textColor">@color/feeds_item_description_color</item>
        <item name="android:textSize">@dimen/list_item_description_text_size</item>
    </style>

    <style name="BrownbagDetailLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/brownbag_detail_item_bg</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:layout_margin">@dimen/list_item_padding</item>
    </style>

</resources>